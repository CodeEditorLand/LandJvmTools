{
  "name": "jvm-tools",
  "displayName": "JVM Tools",
  "version": "0.0.1",
  "private": "false",
  "description": "JVM Tools Accessible from within Visual Studio Code",
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "java",
    "jvm",
    "jdk",
    "profile",
    "debug"
  ],
  "homepage": "https://github.com/CodeEditorLand/CodeEditorLand#readme",
  "bugs": {
    "url": "https://github.com/CodeEditorLand/CodeEditorLand/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeEditorLand/CodeEditorLand.git"
  },
  "license": "MIT",
  "author": {
    "name": "Nikola Hristov",
    "email": "nikola@nikolahristov.tech",
    "url": "https://nikolahristov.tech"
  },
  "publisher": "playform",
  "type": "module",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "prepublishOnly": "TypeScriptESBuild Source/**/*.ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "jvmList.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "jvmList.openJConsole",
        "title": "Open JConsole",
        "icon": "$(play)",
        "enablement": "view == jvmList && viewItem == jvm"
      },
      {
        "command": "jvmList.jfrStart",
        "title": "Start Flight Recording",
        "icon": "$(clock)"
      },
      {
        "command": "jvmList.threadStackTrace",
        "title": "Perform Thread StackTrace",
        "enablement": "view == jvmList && viewItem == jvm"
      }
    ],
    "configuration": {
      "title": "JVM Tools",
      "properties": {
        "jvmtools.refreshTimeout": {
          "type": "number",
          "default": 5,
          "description": "Time in seconds the view will refresh the list of JVMs. (default: 5)"
        },
        "jvmtools.jfrStartOptions": {
          "type": "string",
          "default": "duration=30s settings=profile filename=./jfr-recording.jfr"
        },
        "jvmtools.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "info",
            "verbose"
          ],
          "default": "info",
          "description": "%configuration.java.test.log.level.description%",
          "scope": "window"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "jvmList.refresh",
          "when": "view == jvmList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jvmList.openJConsole",
          "when": "view == jvmList && viewItem == jvm"
        },
        {
          "command": "jvmList.jfrStart",
          "when": "view == jvmList && viewItem == jvm"
        },
        {
          "command": "jvmList.openJConsole",
          "when": "view == jvmList && viewItem == jvm",
          "group": "inline"
        },
        {
          "command": "jvmList.threadStackTrace",
          "when": "view == jvmList && viewItem ==jvm"
        }
      ]
    },
    "views": {
      "debug": [
        {
          "id": "jvmList",
          "name": "JVM List"
        }
      ]
    }
  },
  "activationEvents": [
    "onView:jvmList"
  ],
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.3",
    "@types/node": "20.8.9",
    "@types/vscode": "1.83.1",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "8.52.0",
    "glob": "10.3.10",
    "mocha": "10.2.0",
    "typescript": "5.2.2",
    "typescript-esbuild": "0.3.1",
    "vscode-test": "1.3.0"
  },
  "engines": {
    "vscode": "1.45.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "icon": "resources/duke-toolbox.png",
  "badges": [],
  "preview": false
}
