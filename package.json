{
	"name": "jvm-tools",
	"displayName": "JVM Tools",
	"version": "0.0.1",
	"private": false,
	"description": "JVM Tools Accessible from within Visual Studio Code",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "jvmList.refresh",
				"icon": "$(refresh)",
				"title": "Refresh"
			},
			{
				"command": "jvmList.openJConsole",
				"enablement": "view == jvmList && viewItem == jvm",
				"icon": "$(play)",
				"title": "Open JConsole"
			},
			{
				"command": "jvmList.jfrStart",
				"icon": "$(clock)",
				"title": "Start Flight Recording"
			},
			{
				"command": "jvmList.threadStackTrace",
				"enablement": "view == jvmList && viewItem == jvm",
				"title": "Perform Thread StackTrace"
			}
		],
		"configuration": {
			"properties": {
				"jvmtools.jfrStartOptions": {
					"default": "duration=30s settings=profile filename=./jfr-recording.jfr",
					"type": "string"
				},
				"jvmtools.logLevel": {
					"default": "info",
					"description": "%configuration.java.test.log.level.description%",
					"enum": [
						"error",
						"info",
						"verbose"
					],
					"scope": "window",
					"type": "string"
				},
				"jvmtools.refreshTimeout": {
					"default": 5,
					"description": "Time in seconds the view will refresh the list of JVMs. (default: 5)",
					"type": "number"
				}
			},
			"title": "JVM Tools"
		},
		"menus": {
			"view/item/context": [
				{
					"command": "jvmList.openJConsole",
					"when": "view == jvmList && viewItem == jvm"
				},
				{
					"command": "jvmList.jfrStart",
					"when": "view == jvmList && viewItem == jvm"
				},
				{
					"command": "jvmList.openJConsole",
					"group": "inline",
					"when": "view == jvmList && viewItem == jvm"
				},
				{
					"command": "jvmList.threadStackTrace",
					"when": "view == jvmList && viewItem ==jvm"
				}
			],
			"view/title": [
				{
					"command": "jvmList.refresh",
					"group": "navigation",
					"when": "view == jvmList"
				}
			]
		},
		"views": {
			"debug": [
				{
					"id": "jvmList",
					"name": "JVM List"
				}
			]
		}
	},
	"activationEvents": [
		"onView:jvmList"
	],
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"@types/vscode": "1.87.0",
		"glob": "10.3.10",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5",
		"vscode-test": "1.3.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "resources/duke-toolbox.png",
	"badges": [],
	"preview": false
}
